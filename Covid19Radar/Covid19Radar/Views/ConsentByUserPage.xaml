<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Covid19Radar.Views.ConsentByUserPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:Covid19Radar.Resx;assembly=Covid19Radar"
    Title="{Binding Title}"
    Padding="18,10"
    Style="{StaticResource PageStyle}">
    <StackLayout>
        <StackLayout BindableLayout.ItemsSource="{Binding TermsOfServices}" Spacing="25">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <StackLayout Spacing="10">
                        <Label Text="{Binding Title}" />
                        <Label Text="{Binding Description}" />
                    </StackLayout>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </StackLayout>
        <Button
            Margin="0,48"
            Command="{Binding OnClickNext}"
            Style="{StaticResource DefaultButtonStyle}"
            Text="{x:Static resources:AppResources.ButtonAgree}" />
    </StackLayout>
</ContentPage>
