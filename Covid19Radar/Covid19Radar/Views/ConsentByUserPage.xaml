<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Covid19Radar.Views.ConsentByUserPage"
                          xmlns:local="clr-namespace:Covid19Radar"
             Title="{Binding Title}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Padding="30,0,30,0" Grid.Row="0">
            <StackLayout>
                <Label Text="{Binding TextUserAgreement}" 
                       TextColor="#333333" 
                       FontSize="28" 
                       HorizontalTextAlignment="Center"
                       Padding="0,30,0,10" />
                <Label Text="{Binding TextContainsDescriptionOfConsent1}" 
                       TextColor="#333333"
                       FontFamily="{DynamicResource MaterialFontFamily}" 
                       FontSize="16"
                       LineHeight="1.2"
                       Padding="0,30,0,0" />
                <Label Text="{Binding TextContainsDescriptionOfConsent2}" 
                       TextColor="#333333"
                       FontFamily="{DynamicResource MaterialFontFamily}" 
                       FontSize="16"
                       LineHeight="1.2"
                       Padding="0,30,0,0" />
            </StackLayout>
        </Grid>
        <Grid Grid.Row="1" Padding="120,0,120,60">
            <Button BackgroundColor="#019ae8"
                    Text="{Binding ButtonAgreeAndProceed}" 
                    TextColor="#FFFFFF"
                    FontSize="25"
                    MinimumHeightRequest="60"
                    MinimumWidthRequest="170"
                    Command="{Binding Path=OnClickNext}"/>
        </Grid>
    </Grid>
</ContentPage>
