<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Covid19Radar.Views.HomePage"
                          xmlns:local="clr-namespace:Covid19Radar"
             Title="{Binding Title}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackLayout>
                <ListView x:Name="BeaconList" ItemsSource="{Binding Beacons}"  CachingStrategy="RecycleElement">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout BackgroundColor="#eee" Orientation="Vertical">
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding BeaconUuid}" HorizontalOptions="EndAndExpand" TextColor="#503026" />
                                        <Label Text="{Binding Count}" HorizontalOptions="EndAndExpand" TextColor="#503026" />
                                        <Label Text="{Binding Major}" HorizontalOptions="EndAndExpand" TextColor="#503026" />
                                        <Label Text="{Binding Miner}" HorizontalOptions="EndAndExpand" TextColor="#503026" />
                                        <Label Text="{Binding Distance}" HorizontalOptions="EndAndExpand" TextColor="#503026" />
                                        <Label Text="{Binding ElaspedTime}" HorizontalOptions="EndAndExpand" TextColor="#503026" />
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button BackgroundColor="#019ae8"
                    Text="Update List" 
                    TextColor="#FFFFFF"
                    FontSize="25"
                    MinimumHeightRequest="60"
                    MinimumWidthRequest="170"
                    Command="{Binding Path=OnClickUpdateList}"/>

            </StackLayout>
        </Grid>
        <Grid Grid.Row="1" Padding="120,0,120,60">
            <Button BackgroundColor="#019ae8"
                    Text="UserSetting" 
                    TextColor="#FFFFFF"
                    FontSize="25"
                    MinimumHeightRequest="60"
                    MinimumWidthRequest="170"
                    Command="{Binding Path=OnClickUserSetting}"/>
        </Grid>
        <Grid Grid.Row="2" Padding="120,0,120,60">
            <Button BackgroundColor="#019ae8"
                    Text="Acknowledgments" 
                    TextColor="#FFFFFF"
                    FontSize="25"
                    MinimumHeightRequest="60"
                    MinimumWidthRequest="170"
                    Command="{Binding Path=OnClickAcknowledgments}"/>
        </Grid>
        <Grid Grid.Row="3" Padding="120,0,120,60">
            <Button BackgroundColor="#019ae8"
                    Text="UpadteInfomation" 
                    TextColor="#FFFFFF"
                    FontSize="25"
                    MinimumHeightRequest="60"
                    MinimumWidthRequest="170"
                    Command="{Binding Path=OnClickUpateInfo}"/>
        </Grid>
    </Grid>
</ContentPage>
