<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Covid19Radar.Views.ContactedNotifyPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:prism="http://prismlibrary.com"
    Title="過去14日間の接触"
    ios:Page.UseSafeArea="true"
    prism:ViewModelLocator.AutowireViewModel="True"
    Style="{StaticResource DefaultPageStyle}"
    Visual="Material">
    <ScrollView>
        <StackLayout
            Padding="10"
            BackgroundColor="#FFFFFF"
            Spacing="20"
            VerticalOptions="Center">
            <Frame
                Padding="16"
                BackgroundColor="#FFF3DD"
                CornerRadius="10">
                <StackLayout Spacing="0">
                    <ffimageloading:CachedImage Aspect="AspectFit" Source="InfoMark.png" />

                    <Label Style="{StaticResource DefaultTitleLabel}" Text="陽性者との接触確認" />
                    <Grid ColumnSpacing="10" RowSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalTextAlignment="End"
                            Style="{StaticResource DefaultTitleLabel}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding ExposureCount}" />
                                    <Span Text="件" />
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Button
                            Grid.Row="0"
                            Grid.Column="1"
                            AutomationId="OnClickExposures"
                            Command="{prism:NavigateTo 'ExposuresPage'}"
                            HorizontalOptions="StartAndExpand"
                            Scale="0.8"
                            Style="{StaticResource DefaultButton}"
                            Text="接触一覧" />
                    </Grid>

                    <Label
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource DefaultSubTitleLabel}"
                        Text="以下の選択ボタンで、現在の症状などを入力ください。ご入力の内容に応じて、PCR検査センター等への受信を案内します。" />

                    <Button
                        Margin="0,0,0,20"
                        AutomationId="ButtonShareApp"
                        Command="{Binding Path=OnClickByForm}"
                        Style="{StaticResource DefaultButton}"
                        Text="現在の症状などを入力する" />

                    <Button
                        AutomationId="ButtonShareApp"
                        Command="{Binding Path=OnClickByPhone}"
                        Style="{StaticResource DefaultButton}"
                        Text="入力に変えて電話で報告相談する" />

                    <Label
                        HorizontalTextAlignment="Start"
                        Style="{StaticResource DefaultSubTitleLabel}"
                        Text="受診の際などに必要となる場合があるため、本画面のスクリーンショットの保存をお願いいたします。" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>